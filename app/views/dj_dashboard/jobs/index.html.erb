<h1>Jobs</h1>

<span class="label label-primary">Queued</span>
<span class="label label-success">Running</span>

<hr>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Queue</th>
      <th>Pri.</th>
      <th>Att.</th>
      <th>Method</th>
      <th>Run at</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'job', collection: @jobs %>
  </tbody>
</table>

<% if @jobs.any? %>
  <%= link_to 'Clear Jobs', clear_jobs_path, class: 'btn btn-sm btn-danger' %>
<% end %>

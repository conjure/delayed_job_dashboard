<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">
      Last Error
      <span class="badge badge-error pull-right"><%= pluralize @job.attempts, "Failure" %></span>
    </h3>
  </div>
  <div class="panel-body">
    <% @errors = @job.last_error.to_s.split("\n") %>
    <pre class="small"><%= @errors.shift %></pre>
    <pre class="small"><%= @errors.join("<br>").html_safe %></pre>
  </div>
</div>